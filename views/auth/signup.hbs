<div class="login-window">
    <div>
        <a href="/"><img class="logo-login" src="../images/doners-logo.svg" alt="doners_of_berlin_logo" /></a>
    </div>
    <h1>Signup</h1>
    <div class="login-form">
        <form action="/signup" method="POST" id="form-container">
            <label for="username">Username</label>
            <input id="username" type="text" name="username">
            <label for="password">Password</label>
            <input id="password" type="password" name="password">
            <button type="submit" class="opinion-btn">Create account</button>
            <span class="account-message">Do you already have an account?<a href="/login"> Login</a></span>
        </form>
        {{#if errorMessage}}
        <p style="color: red">{{errorMessage}}</p>
        {{/if}}
    </div>
</div>