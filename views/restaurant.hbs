<div class="header">
  <div>
        <a href="/"><img class="doner-logo" src="../images/doners-logo.svg" alt="doners_of_berlin_logo" /></a> 
    </div>
    
  <nav class="nav-bar">
    <ul>
      <li><a href="/logout"><img class="logout-icon" src="../images/logout-icon.svg" alt="logout" /></a></li>
    </ul>
  </nav>
</div>

<div class="main-win">
  <div class="rest-info">
    <div class="rest-data">
      <h1 class="shop-name">{{shopsList.name}}</h1>
      <h4>{{shopsList.telephone}}</h4>
      <h4>{{shopsList.address1}}</h4>
      <h4>{{shopsList.address2}}</h4>
      <h4>{{shopsList.city}} {{shopsList.postcode}}</h4><br>

      <div class="form-buttons">
        <form action="/restauran/{{shopsList._id}}/edit" method="GET"><button type="submit" class="button_cont edit-btn">Edit</button></form>
        <form action="/restauran/{{shopsList._id}}/delete" method="POST"><button type="submit" class="button_cont delete-btn">Delete?</button></form>
      </div>
    </div>

    <div class="review">
      <form action="/restaurant/{{shopsList.id}}/restaurant-review" method="POST">
        <fieldset>
          <h4>Write a review</h4>
          <p>Name:</p><input type="text" name='reviewername' class="input-name">
          <p>Review:</p><input type="textarea" name='review' class="input-review">
          <button type="submit" class="opinion-btn">Give us your opinion!</button>
        </fieldset>
      </form><br>

       {{#if errorMessage}}
  <p style="color: red">{{errorMessage}}</p>
  {{/if}}

      <form action="/restaurant/{{shopsList.id}}/image-upload" method="post" enctype="multipart/form-data">
        <label for="image-input" >Upload an image:</label><br><br>
        <input class="button" type="file" name="image" id="image-input" class="form-control-file" />
        <button type="submit" class="opinion-btn">Upload</button>
      </form>



      <div class="user-reviews">
          <h3><strong>Reviews:</strong></h3>
        {{#each shopsList.reviews}}
          <h3>{{reviewername}} says:</h3>
          <p>{{review}}</p>
        {{/each}}
      </div>

    </div>

  </div>

  <div class="slider">
    <div class="pic-ctn">
      {{{images}}}
    </div>
  </div>

</div>