
<div class="header">
    <div>
       <img class="doner" src="./images/doner_logo.jpg" alt="doner_logo"/>
    </div>

    <nav class="nav-bar">
      <ul>

        <li><a class="button_cont" href="/signup"> Sign Up </a></li>
        <li><a class="button_cont" href="/login"> Log In </a></li>
        <li><a class="button_cont" href="/"> Home </a></li>
        <li><a href="/logout"><img class="logout-icon" src="./images/logout-icon.svg" alt="logout"/></a><li>
      </ul>
    </nav>
</div>

<div class="main-win">
  <div class="rest-info">
    <div class="rest-data">
          <h1 class="shop-name">{{shopsList.name}}</h1>
          <h4>{{shopsList.address1}}</h4>
          <h4>{{shopsList.address2}}</h4>
          <h4>{{shopsList.postcode}}</h4>
          <h4>{{shopsList.city}}</h4>
          <h4>{{shopsList.telephone}}</h4>
          <form action="/restauran/{{shopsList._id}}/delete" method="POST"><button>Delete!</button></form>
          <form action="/restauran/{{shopsList._id}}/edit" method="GET"><button>edit!</button></form>

    </div>

    {{#each shopsList.reviews}}
    <p>
      <strong>{{reviewername}} says:</strong>
      {{review}}
    </p>
    {{/each}}

    <form action="/restaurant/{{shopsList.id}}/restaurant-review" method="POST">
      <fieldset>
        <h3>Review Page</h3>
        <p>Name:<input type="text" name='reviewername'></p>
        <p>Review:<input type="textarea" name='review'></p>
        <p><button>Give us your opinion!</button></p>
      </fieldset>
    </form>

    <form action="/restaurant/{{shopsList.id}}/image-upload" method="post" enctype="multipart/form-data">
      <label for="image-input">Image:</label>
      <input type="file" name="image" id="image-input" class="form-control-file" />
      <button type="submit" class="btn btn-primary">Create</button>
    </form>

  </div>


  <div class="slider">
    <div class="slideshow-container">
      <div class="mySlides fade">
        <div class="numbertext"></div>
        <img class="slider-img"
          src="https://www.takeaway.com/be/foodwiki/uploads/sites/2/2017/10/doner-kebab-3-1080x960.jpg">
        <div class="text"></div>
      </div>
      <div class="mySlides fade">
        <div class="numbertext"></div>
        <img class="slider-img"
          src="https://www.muminthemadhouse.com/wp-content/uploads/2016/01/Fakeaway-slow-cooker-doner-kebab..jpg">
        <div class="text"></div>
      </div>
      <div class="mySlides fade">
        <div class="numbertext"></div>
        <img class="slider-img" src="https://www.spiceraks.com/Graphics/LambDonnerKebabRecipe.jpg">
        <div class="text"></div>
      </div>
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
  </div>
</div>
<script src="/javascripts/slider.js"></script>
