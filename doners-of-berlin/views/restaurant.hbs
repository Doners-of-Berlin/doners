

<div class="header">
    <div>
      <img class="doner" src="" alt=" doner" />
    </div>

    <nav class="nav-bar">
      <ul>
        <li><a class="button_cont" href="#"> Sign Up </a></li>
        <li><a class="button_cont" href="#"> Log In </a></li>
      </ul>
    </nav>
</div>
<div class="main-win">
<div class="rest-info">
  <div>
    <p>Name: {{shopsList.name}}</p>
    <p>{{shopsList.address1}}</p>
    <p>{{shopsList.address2}}</p>
    <p>{{shopsList.postcode}}</p>
    <p>{{shopsList.city}}</p>
    <p>{{shopsList.telephone}}</p>
  </div>

  {{#each  shopsList.reviews}}
  <p>
    <strong>{{reviewername}} says:</strong>
    {{review}}
  </p>
  {{/each}}
  <form action="/restaurant/{{shopsList.id}}/restaurant-review" method="POST">
    <fieldset>
      <legend>Review Page</legend>
      <p>Name:<input type="text" name='reviewername'></p>
      <p>Review:<input type="textarea" name='review'></p>
      <p><button>Give us your opinion!</button></p>
    </fieldset>
  </form>
</div>

<div class="slider">
  <div class="slideshow-container">
        <div class="mySlides fade">
          <div class="numbertext"></div>
          <img class="slider-img" src="https://www.takeaway.com/be/foodwiki/uploads/sites/2/2017/10/doner-kebab-3-1080x960.jpg" >
          <div class="text"></div>
        </div>
        <div class="mySlides fade">
          <div class="numbertext"></div>
          <img class="slider-img" src="https://www.muminthemadhouse.com/wp-content/uploads/2016/01/Fakeaway-slow-cooker-doner-kebab..jpg" >
          <div class="text"></div>
        </div>
        <div class="mySlides fade">
          <div class="numbertext"></div>
          <img class="slider-img" src="https://www.spiceraks.com/Graphics/LambDonnerKebabRecipe.jpg" >
          <div class="text"></div>
        </div>
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>
</div>
</div>
    <script src="/javascripts/slider.js"></script>